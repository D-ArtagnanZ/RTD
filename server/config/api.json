{
  "queries":[
    {
    "id":"getEqpById",
    "data_source":"Oracle",
    "description":"根据设备ID获取设备信息",
    "sql":"SELECT * FROM eqp WHERE id = ?",
    "params":["id"]
    },
    {
      "id":"getLotById",
      "data_source":"Oracle",
      "description":"根据批次ID获取批次信息",
      "sql":"SELECT * FROM lot WHERE id = ?",
      "params":["id"]
    },
    {
      "id":"getEqpList",
      "data_source":"Oracle",
      "description":"获取设备列表",
      "sql":"SELECT * FROM (SELECT a.*, ROWNUM rnum FROM (SELECT * FROM eqp ORDER BY id) a WHERE ROWNUM <= :page_no * :page_size) WHERE rownum > (:page_no - 1) * :page_size",
      "params":["page_no","page_size"]
    },
    {
      "id":"getLotList",
      "data_source":"Oracle",
      "description":"获取批次列表",
      "sql":"SELECT * FROM (SELECT a.*, ROWNUM rnum FROM (SELECT * FROM lot ORDER BY id) a WHERE ROWNUM <= :page_no * :page_size) WHERE rownum > (:page_no - 1) * :page_size",
      "params":["page_no","page_size"]
    },
    {
      "id":"getDispatchList",
      "data_source":"PostgreSQL",
      "description":"获取调度列表",
      "sql":"SELECT * FROM dispatch ORDER BY id LIMIT :page_size OFFSET (:page_no - 1) * :page_size",
      "params":["page_no","page_size"]
    },
    {
      "id":"searchDispatchByEqpId",
      "data_source":"PostgreSQL",
      "description":"根据设备ID搜索调度记录",
      "sql":"SELECT * FROM dispatch WHERE eqp_id = ?",
      "params":["eqp_id"]
    },
    {
      "id":"searchDispatchByLotId",
      "data_source":"PostgreSQL",
      "description":"根据批次ID搜索调度记录",
      "sql":"SELECT * FROM dispatch WHERE lot_id = ?",
      "params":["lot_id"]
    },
    {
      "id":"countEqp",
      "data_source":"Oracle",
      "description":"获取设备总数",
      "sql":"SELECT COUNT(*) as total FROM eqp",
      "params":[]
    },
    {
      "id":"countLot",
      "data_source":"Oracle",
      "description":"获取批次总数",
      "sql":"SELECT COUNT(*) as total FROM lot",
      "params":[]
    },
    {
      "id":"countDispatch",
      "data_source":"PostgreSQL",
      "description":"获取调度总数",
      "sql":"SELECT COUNT(*) as total FROM dispatch",
      "params":[]
    }
  ]
}